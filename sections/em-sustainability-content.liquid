<div 
  class="bg-no-repeat bg-right p-4 mt-20 bg-none md:bg-url"
  style="--tw-bg-url: url({{ section.settings.image | img_url: '300x300' }});">
<div class="py-10 px-20 border-4 border-tertiary">
  <img 
    class="m-auto my-0 xs:w-1/2 md:hidden" 
    src="{{ section.settings.image | img_url: '200x200' }}"
    alt="{{ section.settings.alt }}"
    width="{{ section.settings.image.width }}"
    height="{{ section.settings.image.height }}">
  <div class="text-center md:w-7/12 md:text-left">
    <h3 class="text-5xl pt-8 pb-4">{{ section.settings.heading }}</h3>
    <p class="my-3">{{ section.settings.description }}</p>
  </div>
</div>

{% schema %}
{
    "name": "Ethel M Sustainability",
    "tag": "section",
    "class": "tw page-width",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Our Commitment to Sustainability"
        },
        {
            "type": "textarea",
            "id": "description",
            "label": "Description",
            "default": "With every shipment, we have two goals. The first is to make sure that your chocolates are delivered in the highest quality. The second is to reduce our environmental footprint as much as possible. Thatâ€™s why we include only the materials that are necessary to achieve both. Thank you for choosing Ethel M Chocolates."
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "text",
            "id": "alt",
            "label": "Image alt tag"
        }
    ],
    "presets": [
        {
            "name":"Ethel M Sustainability"
        }
    ]
}
{% endschema %}